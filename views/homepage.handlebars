<main class="dashboard">

<div class="newPost">
  <div class="newpostHeader">
    <input class="newTitle" maxlength="30" type="text" placeholder="Title">
    <input class="newPost" maxlength="130" type="text" placeholder="What's up...">
  </div>
</div>


{{#each allPost as |post|}}
  <div class="blogPost">
      <div class="postHeader"> 
        <h1 class="blogPost-title"> {{post.title}}</h1>
        <h3 class="blogPost-timestamp">Posted By {{post.user.username}} on 02/25/2022</h3>
      </div>
      <p class="blogPost-description">{{post.description}}</p>
  </div>

  {{/each}}


    
</main>