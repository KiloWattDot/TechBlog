<main class="dashboard">

<div class="newPost">
  <div class="newpostHeader">
    <form class="titleForm"> 
      <input class="newTitle" maxlength="30" type="text" placeholder="Title">
    </form>


    <form class="form-group">
      <input class="newPostDesc" maxlength="130" type="text" placeholder="What's up...">
      <input type="submit" onclick="submitPost()" >
    </form>
  </div>

</div>


{{#each (reverse allPost) as |post|}}
  <div class="blogPost">
      <div class="postHeader"> 
        <h1 class="blogPost-title"> {{post.title}}</h1>
        <h3 class="blogPost-timestamp">Posted By {{post.user.username}} on {{format_time post.createdAt}}</h3>
      </div>
      <p class="blogPost-description">{{post.description}}</p>
      

    <div class="commentBox">

        <input class="postId commentPostID" value=" {{post.id}}">

      <form>
        
        <input class="commentPost" type="text" placeholder="type comment..">
        <input type="submit" onclick="submitComment()">
        {{post.comments}}
      </form>
    </div>
  </div>

  {{/each}}


    
</main>

<script src="/js/newPost.js"></script>
<script>
   const toggleMenu = document.querySelector('#btn-toggle')
    const naviList = document.querySelector('#naviList')


    toggleMenu.addEventListener('click', () => {
        naviList.classList.toggle('active')
    })
</script>